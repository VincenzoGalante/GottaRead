<div class="card1 w-100 p-3 mr-1">
  <h5 class="card-title"><%= title %></h5>
    <% @articles.first(3).each do |article| %>
      <div class="w-100 d-flex">
        <div><h6><%=article.title%></h6></div>
        <div><h6><%=article.note %></h6></div>
          <% if article.reminder %>
            <div><h6><%=article.reminder.strftime("%A") %></h6></div>
          <% end %>
        <div><h6><%=article.importance %><i class="far fa-star"></i></h6></div>
      </div>
    <%end%>
</div>
