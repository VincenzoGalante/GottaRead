<div class="modal fade" id="folderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a new folder</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="m-3">
            <%= simple_form_for(folder) do |f| %>
              <%= f.input :title %>
              <%= f.input :description %>
              <%= f.input :photo, as: :file %>
            <% end %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="button-ghost" data-dismiss="modal">Close</button>
        <button type="button" class="button-black">Add</button>
      </div>
    </div>
  </div>
</div>
input_html: { class: 'button-ghost' }
