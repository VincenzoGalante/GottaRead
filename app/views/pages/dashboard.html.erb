
<div class="mx-3 mb-3">
  <div class="card-top w-100 d-flex mb-3">
    <%= render partial: "shared/card_next_article.html", locals: {title: "Next article to read"} %>
    <%= render partial: "shared/card_missed_article", locals: {title: "Missed article to read"} %>
  </div>
  <br>
    <div class="bottom-part-dash d-flex">
      <div class="card-deck">
        <%= render partial: "shared/dashboard_card", locals: {title: "Freediving", articles: @freediving_articles, folder_picture: image_path("freediving_folder.jpeg") } %>
        <%= render partial: "shared/dashboard_card", locals: {title: "Tennis", articles: @tennis_articles, folder_picture: image_path("tennis_folder.jpeg") } %>
        <%= render partial: "shared/dashboard_card", locals: {title: "Neuroscience", articles: @neuroscience_articles, folder_picture: image_path("neuroscience_folder.jpeg")} %>
      </div>
      <div class="text-center">
        <div class="dashboard-button">
          <%= render partial: "shared/dashboard_button", locals: {title: "Search for article", buttontype: "button-black-dash", link: ""} %>
          <%= render partial: "shared/dashboard_button", locals: {title: "Add article", buttontype: "button-black-dash", link: new_article_path } %>
          <%= render partial: "shared/dashboard_button", locals: {title: "Add connection", buttontype: "button-ghost-dash", link: new_connection_path } %>
          <%= render partial: "shared/dashboard_button", locals: {title: "Add folder", buttontype: "button-ghost-dash", link: new_folder_path } %>
        </div>
      </div>
    </div>
  </div>
</div>
